    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Minarca Client GUI",
            "type": "python",
            "request": "launch",
            "module": "minarca_client.main",
            "args": ["ui"],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "LANGUAGE": "fr",
            }
        },
        {
            "name": "Python: Minarca Client CLI",
            "type": "python",
            "request": "launch",
            "module": "minarca_client.main",
            "args": ["--help"],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "LANGUAGE": "fr",
            }
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
        }
    ]
}