<configuration>

	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${java.io.tmpdir}/minarca-log.txt</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<fileNamePattern>minarca-log.%i.txt</fileNamePattern>
			<minIndex>1</minIndex>
			<maxIndex>3</maxIndex>
		</rollingPolicy>
		<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<maxFileSize>5MB</maxFileSize>
		</triggeringPolicy>
		<encoder>
			<pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSS} minarca[%X{process_id}]: %-5level-%thread-%logger{36}: %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="com.patrikdufresne">
		<level value="debug" />
	</logger>

	<root level="warn">
		<appender-ref ref="FILE" />
	</root>

</configuration>
